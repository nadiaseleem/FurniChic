<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#B8D9FA"/>
                    <!-- alttan gölge -->
                    <corners android:radius="19dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:left="@dimen/_2sdp"
                android:top="@dimen/_2sdp"
                >
                <shape>
                    <padding android:top="5dp"/>

                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/g_gray500"/>

                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>


            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/g_gray500"/>

                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>